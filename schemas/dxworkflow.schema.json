{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DNAnexus Workflow Metadata",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Workflow name"
    },
    "description": {
      "type": "string",
      "description": "Workflow description"
    },
    "version": {
      "type": "string",
      "description": "Workflow version"
    },
    "inputs": {
      "type": "object",
      "description": "Workflow input specification",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "optional": {
            "type": "boolean"
          },
          "default": {},
          "description": {
            "type": "string"
          }
        },
        "required": [
          "type"
        ]
      }
    },
    "outputs": {
      "type": "object",
      "description": "Workflow output specification",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "type"
        ]
      }
    },
    "stages": {
      "type": "array",
      "description": "Workflow stages",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "app": {
            "type": "string"
          },
          "inputs": {
            "type": "object",
            "additionalProperties": {}
          },
          "outputs": {
            "type": "object",
            "additionalProperties": {}
          }
        },
        "required": [
          "id",
          "name",
          "app"
        ]
      }
    }
  },
  "required": [
    "name",
    "version",
    "stages"
  ]
}